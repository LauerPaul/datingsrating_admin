form(v-if="form")
	v-subheader Основное
	v-container(grid-list-xl)
		v-layout(wrap)
			v-flex(xs12, sm10)
				v-text-field(v-model="form.name", label="Название", required)
				v-text-field(v-model="form.url", label="Ссылка", required)
			
			v-flex(xs12, sm2)
				v-card
					v-img(:src="imageVal", width="100%", @click="preview=true")

					v-card-actions.justify-center
						v-btn.white--text(color="primary", fab, icon, small, title="Просмотр", @click="preview=true")
							v-icon zoom_in
						v-btn.white--text(color="green", fab, icon, small, title="Загрузить", @click="$refs.file.click()")
							v-icon cloud_upload
						
						input(v-on:change="imageNewSet($event)", ref="file", type="file", accept="image/jpeg,image/png,image/gif", style="display: none")

	v-subheader Рейтинг ({{ rate }})
	v-container(grid-list-xl)
		v-layout(wrap)
			v-flex(xs6, sm3)
				v-text-field(v-model="form.er_ease_use", label="Ease of Use", type="number", min="0")
			v-flex(xs6, sm3)
				v-text-field(v-model="form.er_services_support", label="Services & Support", type="number", min="0")
			v-flex(xs6, sm3)
				v-text-field(v-model="form.er_number_members", label="Number of Members", type="number", min="0")
			v-flex(xs6, sm3)
				v-text-field(v-model="form.er_quality_profiles", label="EQuality of Profiles", type="number", min="0")
			v-flex(xs6, sm3)
				v-text-field(v-model="form.er_safety_antiscam", label="Safety & Anti-Scam", type="number", min="0")
			v-flex(xs6, sm3)
				v-text-field(v-model="form.er_value_money", label="Value for Money", type="number", min="0")
			v-flex(xs6, sm3)
				v-text-field(v-model="form.er_ease_use", label="Features", type="number", min="0")
			v-flex(xs6, sm3)
				v-text-field(v-model="form.er_functionality", label="Functionality", type="number", min="0")


	.text-center
		v-dialog(v-model="preview")
			v-card
				.text-center
					img(:src="imageVal", style="max-width: 100%")